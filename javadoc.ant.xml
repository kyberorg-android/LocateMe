<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jardoc">
<property file="app.properties"/>
<property file="local.properties"/>
<property file="project.properties"/>

<target name="public_doc" description="LocateMe Public Javadoc">
    <javadoc
		destdir="docs/api" 
		doctitle="LocateMe Class reference" 
		verbose="on" 
        use="true"
		splitindex="true"
		version="true"		
        classpath="${sdk.dir}\platforms\${target}\android.jar"
        sourcepath="src"
        linkoffline="http://d.android.com/reference ${sdk.dir}\docs\reference"
        >
    </javadoc>
</target>
<target name="dev_doc" description="LocateMe Developers Javadoc">
    <javadoc
		access="private"
		destdir="docs/dev" 
		doctitle="LocateMe Class reference" 
		verbose="on" 
        use="true"
		splitindex="true"
		version="true"		
        classpath="${sdk.dir}\platforms\${target}\android.jar"
        sourcepath="src"
        linkoffline="http://d.android.com/reference ${sdk.dir}\docs\reference"
        >
    </javadoc>
</target>
<target name="doc" depends="public_doc, dev_doc" />
<target name="jardoc" depends="doc">
    <jar destfile="docs\${app.name}-${app.version}-javadoc.jar" basedir="docs" />
</target>
</project>